<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical" >

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/explanation" />

  <Button
    android:id="@+id/button_video_player_fullscreen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/view_video_full" />

  <Button
    android:id="@+id/button_video_player_halfscreen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/view_video_half" />

  <CheckBox
    android:id="@+id/checkbox_toggle_fix"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:checked="false"
    android:text="@string/toggle_the_fix_for_fullscreen_video" />

</LinearLayout>